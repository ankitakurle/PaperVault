<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login | PaperVault</title>

  <!-- Bootstrap -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
  >

  <!-- Page CSS -->
  <link rel="stylesheet" href="/css/auth.css">
   <link rel="stylesheet" href="/css/homepage.css">
</head>
<body>

<!-- HEADER -->
<header class="pv-header">
  <div class="pv-header-container">

    <a href="/university" class="pv-brand">üìö PaperVault</a>

    <div class="pv-auth">
      <a href="/register" class="pv-auth-link">Register</a>
    </div>

  </div>
</header>
<!-- üîô BACK LINK -->
<div class="container mt-3">
  <a href="javascript:history.back()" class="text-decoration-none fw-medium">
    ‚Üê Back
  </a>
</div>

<% if (error && error.length) { %>
  <div class="alert alert-danger text-center">
    <%= error[0] %>
  </div>
<% } %>

<% if (success && success.length) { %>
  <div class="alert alert-success text-center">
    <%= success[0] %>
  </div>
<% } %>



<main class="auth-page">

  <div class="auth-card">

    <h2 class="auth-title">Welcome Back</h2>
    <p class="auth-subtitle">Login to access PaperVault</p>

    <form action="/login" method="POST">

      <!-- EMAIL -->
      <div class="mb-3">
        <label class="form-label">Email</label>
        <input
          type="email"
          name="email"
          class="form-control"
          placeholder="you@example.com"
          required
        >
      </div>

      <!-- PASSWORD -->
      <div class="mb-3">
        <label class="form-label">Password</label>
        <input
          type="password"
          name="password"
          class="form-control"
          placeholder="Enter your password"
          required
        >
      </div>

      <!-- LOGIN BUTTON -->
      <button type="submit" class="btn btn-primary w-100 auth-btn">
        Login
      </button>

    </form>

    <!-- EXTRA LINKS -->
    <div class="auth-links">
      <a href="/register">Create an account</a>
      <!-- <span>‚Ä¢</span>
      <a href="#">Forgot password?</a> -->
    </div>

  </div>

</main>

</body>
</html>
