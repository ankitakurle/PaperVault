<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Paper vault</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    >
     <link rel="stylesheet" href="/css/homepage.css">
</head>
<body>

<header class="pv-header">
  <div class="pv-header-container">

    <a href="/university" class="pv-brand">üìö PaperVault</a>

    <form action="/university" method="GET" class="pv-search">
      <input type="text" name="search" placeholder="Search university...">
      <button type="submit">Search</button>
    </form>

    <div class="pv-auth">
      <% if (!currentUser) { %>
    <!-- NOT LOGGED IN -->
    <a href="/login" class="pv-auth-link">Login</a>
    <a href="/register" class="pv-auth-link pv-register">Register</a>

  <% } else { %>
    <!-- LOGGED IN -->
    <a href="/logout" class="pv-auth-link pv-logout">Logout</a>
  <% } %>
    </div>

  </div>
</header>

<main class="page-container">
   <% if (search && search.length) { %>
    <div class="top-back-link mb-3">
      <a href="javascript:history.back()" class="back-link">
        ‚Üê Back
      </a>
    </div>
  <% } %>

  <!-- UNIVERSITY LIST -->
  <div class="university-grid">
    <% alluniversities.forEach(uni => { %>
      <!-- university card -->
    <% }) %>
  </div>

  <h1 class="page-title">All university</h1>

  <div class="row row-cols-lg-5 row-cols-md-3 row-cols-sm-1 g-4">

    <% for (let university of alluniversities) { %>
      <div class="col">
        <a href="/university/<%= university._id %>" class="university-link">

          <div class="card university-card">

            <img 
              src="<%= university.logoUrl %>" 
              class="card-img-top"
              alt="<%= university.name %>"
            >

            <div class="card-body">
              <p class="card-text">
                <b><%= university.name %></b>
                <%= university.city %>, <%= university.state %>
              </p>
            </div>

          </div>

        </a>
      </div>
    <% } %>

  </div>

</main>

</body>
</html>

