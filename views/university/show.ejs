<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= uni.name %> | PaperVault</title>

    <!-- Bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    >

    <!-- Page-specific CSS -->
    <link rel="stylesheet" href="/css/universityCourses.css">
    <link rel="stylesheet" href="/css/homepage.css">
</head>
<body>
    
<header class="pv-header">
  <div class="pv-header-container">

    <a href="/university" class="pv-brand">ğŸ“š PaperVault</a>


    <div class="pv-auth">
      <% if (!currentUser) { %>
    <!-- NOT LOGGED IN -->
    <a href="/login" class="pv-auth-link">Login</a>
    <a href="/register" class="pv-auth-link pv-register">Register</a>

  <% } else { %>
    <!-- LOGGED IN -->
    <a href="/logout" class="pv-auth-link pv-logout">Logout</a>
  <% } %>
    </div>

  </div>
</header>

<main class="page-container">
    <div class="top-back-link">
        <a href="/university" class="back-link">
            â† Back to Universities
        </a>
    </div>

    <!-- UNIVERSITY INFO -->
   <section class="university-info">

    <div class="university-header">

        <img 
          src="<%= uni.logoUrl %>" 
          alt="<%= uni.name %> logo"
          class="university-logo"
        >

        <div class="university-text">
            <h1 class="page-title"><%= uni.name %></h1>
            <p class="university-location">
                <%= uni.city %>, <%= uni.state %>, <%= uni.country %>
            </p>
        </div>

    </div>

</section>


    <!-- COURSES -->
    <section class="courses-section">
        <h2 class="section-title">Courses Offered</h2>

        <% if (courses.length === 0) { %>
            <p class="empty-text">No courses available for this university.</p>
        <% } else { %>

            <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-2 row-cols-1 g-4">

                <% for (let course of courses) { %>
                    <div class="col">
                        <a 
                          href="/university/<%= uni._id %>/course/<%= course._id %>"
                          class="course-card-link"
                        >
                            <div class="course-card">
                                <span class="course-name">
                                    <%= course.name %>
                                </span>
                            </div>
                        </a>
                    </div>
                <% } %>

            </div>

        <% } %>
    </section>

    

</main>

</body>
</html>
